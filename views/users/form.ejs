<html>

<head>
    <title>Document</title>
</head>
<%- include('../layouts/style') -%>

    <body>
        <%- include('../layouts/navbar') -%>
            <div class="container">
                <div class="card mt-5">
                    <div class="card-header">
                        <div class="row">
                            <h3 class="card-title col">Add Users</h3>
                            <!-- <a href="users/create" class="btn btn-primary col-1">Add</a> -->
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/users/store" method="POST" class="col-sm-8 col-md-6" autocomplete="off">
                            <div class="form-group mt-3">
                                <label for="" class="form-label">Full Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="name" placeholder="Enter Full Name">
                            </div>

                            <div class="form-group mt-3">
                                <label for="" class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" name="email" placeholder="Enter Email">
                            </div>

                            <div class="form-group mt-3">
                                <label for="" class="form-label">Age <span class="text-danger">*</span></label>
                                <input type="Age" class="form-control" name="age" placeholder="Enter Age">
                            </div>

                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </body>
    <%- include('../layouts/script') -%>

</html>